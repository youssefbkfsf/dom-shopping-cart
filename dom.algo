<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <style>
        /* Add some basic styling */
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        #cart {
            border: 1px solid #ccc;
            padding: 10px;
        }

        .product {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>

<h1>Shopping Cart</h1>

<div id="cart">
    <h2>Cart</h2>
    <ul id="cart-items"></ul>
    <p>Total: $<span id="total-price">0.00</span></p>
</div>

<div id="products">
    <h2>Products</h2>
    <div class="product" data-id="1" data-name="Product 1" data-price="20.00">
        <p>Product 1 - $20.00</p>
        <button onclick="addToCart(1, 'Product 1', 20.00)">Add to Cart</button>
    </div>
    <div class="product" data-id="2" data-name="Product 2" data-price="30.00">
        <p>Product 2 - $30.00</p>
        <button onclick="addToCart(2, 'Product 2', 30.00)">Add to Cart</button>
    </div>
    <!-- Add more products as needed -->
</div>

<script>
    // Function to add an item to the cart
    function addToCart(id, name, price) {
        // Get the cart items and total elements
        var cartItems = document.getElementById('cart-items');
        var totalPriceElement = document.getElementById('total-price');

        // Create a new list item for the cart
        var listItem = document.createElement('li');
        listItem.textContent = name + ' - $' + price.toFixed(2);

        // Append the list item to the cart
        cartItems.appendChild(listItem);

        // Update the total price
        var totalPrice = parseFloat(totalPriceElement.textContent);
        totalPrice += price;
        totalPriceElement.textContent = totalPrice.toFixed(2);
    }
</script>

</body>
</html>
